<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    >
    <TextView
        android:id="@+id/list_item_transaction_amount"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="amount"
        android:textColor="@android:color/holo_green_dark"
        />
    <TextView
        android:id="@+id/list_item_transaction_paid_on"
        android:layout_toRightOf="@id/list_item_transaction_amount"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text=" paid on "
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/list_item_transaction_date"
        android:layout_toRightOf="@id/list_item_transaction_paid_on"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text=" 09/10/2016"
        android:textColor="#000"
        />
    <ImageButton
        android:id="@+id/list_item_transaction_delete_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_delete_black_24dp"
        android:background="#0000"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent"
        android:layout_gravity="bottom"
        android:layout_below="@id/list_item_transaction_paid_on"
        ></FrameLayout>
</RelativeLayout>