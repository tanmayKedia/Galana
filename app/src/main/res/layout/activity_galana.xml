<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/galan_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorLemonade"
        >
        <LinearLayout
            android:id="@+id/galana_gold_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp"
            android:paddingRight="16dp"
            android:weightSum="1"
            android:orientation="horizontal"
            android:background="@color/colorLemonade"
            >
            <TextView
                android:id="@+id/galana_gold_price_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#000"
                android:text="Au@ 40000"
                android:layout_weight="1"
                />
            <ImageButton
                android:id="@+id/galana_edit_rate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_24dp"
                android:background="@color/colorTransparent"
                />
        </LinearLayout>


            <TextView
                android:id="@+id/galana_silver_pice_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#000"
                android:text="Ag@ 25000"
                android:paddingTop="0dp"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:paddingRight="16dp"
                />

    </LinearLayout>

<android.support.v7.widget.RecyclerView
    android:id="@+id/galana_recycler_view"
    android:layout_below="@id/galan_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    >
</android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/_galana_girvi_filter_floating_button"
        android:src="@drawable/ic_filter_list_white_24dp"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        />
</RelativeLayout>