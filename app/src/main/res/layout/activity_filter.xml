<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/filter_activity_clear_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:background="@color/colorLemonade"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/filter_activity_clear_frame_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter atleast one!"
            android:textSize="24sp"
            android:layout_gravity="center"
            />
    </FrameLayout>
    <ScrollView
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/filter_activity_clear_frame"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/filter_activity_name"
                android:text="Name"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/filter_activity_name_ans"
                android:layout_below="@id/filter_activity_name"
                android:hint="Name Starting With"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_stroke"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:paddingLeft="8dp"
                android:textSize="20sp"
                android:cursorVisible="false"
                android:inputType="textNoSuggestions"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/filter_activity_fathers_name"
                android:layout_below="@id/filter_activity_name_ans"
                android:text="Father's Name"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/filter_activity_fathers_name_ans"
                android:layout_below="@id/filter_activity_fathers_name"
                android:hint="Father's Name Starting With"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_stroke"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:paddingLeft="8dp"
                android:textSize="20sp"
                android:cursorVisible="true"
                android:inputType="textNoSuggestions"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/filter_activity_village"
                android:layout_below="@id/filter_activity_fathers_name_ans"
                android:text="Village"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/filter_activity_village_ans"
                android:layout_below="@id/filter_activity_village"
                android:hint="Tap to select a village"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_stroke"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:paddingLeft="8dp"
                android:textSize="20sp"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/filter_activity_caste"
                android:layout_below="@id/filter_activity_village_ans"
                android:text="Caste"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/filter_activity_caste_ans"
                android:layout_below="@id/filter_activity_caste"
                android:hint="Tap to select a caste"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_stroke"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:paddingLeft="8dp"
                android:textSize="20sp"
                android:textColor="#000"
                />

            <Button
                android:id="@+id/filter_activity_okay_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@id/filter_activity_caste_ans"
                android:text="okay"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:background="@drawable/rounded_button_selector"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="20dp"
                />
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>